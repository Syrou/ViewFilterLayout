<?xml version="1.0" encoding="utf-8"?>
<eu.syrou.magiclayout.MagicLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MagicLayout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/holo_green_light"
    tools:context="eu.syrou.magiclayoutapp.MainActivity">

    <Button
        android:id="@+id/animatebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Animate" />

    <Button
        android:id="@+id/restorebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/animatebutton"
        android:text="Restore" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="First"
        MagicLayout:hidePriority="2" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/textview1"
        android:text="Second"
        MagicLayout:hidePriority="1" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/textview2"
        android:background="@android:color/holo_blue_dark"
        android:text="Third" />

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/textview3"
        android:background="@android:color/darker_gray"
        android:text="Fourth" />


    <TextView
        android:id="@+id/textview5"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_below="@+id/textview4"
        android:background="@android:color/holo_red_dark"
        android:text="Fifth"
        android:visibility="gone" />

</eu.syrou.magiclayout.MagicLayout>
